{
    "angular-schematics.schematicsDefaultOptions": {
        "angular-*": {
            "externalTemplate": true,
            "skipStyle": true
        }
    },

    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/*.code-search": true,
      "/src/enviroments": false,
    },

    // Typescript
    "typescript.format.enable": true,
    "editor.formatOnSave": true

}
